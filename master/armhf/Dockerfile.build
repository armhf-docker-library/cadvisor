FROM armhfbuild/golang:1.5.3-alpine
WORKDIR /build

RUN apk --update add git g++ gcc make \
  linux-headers

RUN CGO_ENABLED=0 \
  && go get -d github.com/google/cadvisor \
  && go get github.com/tools/godep \
  && cd $GOPATH/src/github.com/google/cadvisor \
  && godep go build . \
  && cp ./cadvisor /build
